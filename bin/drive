#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '../lib'))

require 'vehicle'

bronco = Car.new 'Blue', 'Ford', 'Mustang'

bronco.set_heading 'S'
bronco.drive 20
bronco.set_heading 'west'
bronco.drive 30
puts bronco.set_heading 'left'
puts bronco.drive 50
puts bronco.set_heading 'R'
puts bronco.drive 1000
puts bronco
